<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlineAuctionApp">
        <activity android:name="com.annmonstar.androidauctionapp.MyCampaigns" />
        <activity android:name="com.annmonstar.androidauctionapp.ProductInfoActivity" />
        <activity android:name="com.annmonstar.androidauctionapp.SettingsActivity" />
        <activity android:name="com.annmonstar.androidauctionapp.addProductforBid" />
        <activity android:name="com.annmonstar.androidauctionapp.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.annmonstar.androidauctionapp.LoginActivity" />
        <activity android:name="com.annmonstar.androidauctionapp.RegisterActivity" />
        <activity android:name="com.annmonstar.androidauctionapp.MainActivity" />
    </application>

</manifest>