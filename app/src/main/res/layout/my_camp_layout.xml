<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    app:backgroundTint="@null"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:backgroundTint="@null">


        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/pimage"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_send_image" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/pname"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end|center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/card2"
            android:fontFamily="@font/nunito_semibold"
            android:maxLines="2"
            android:text="Product Name"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/pdesc"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pname"
            android:layout_gravity="top|end|center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/card2"
            android:fontFamily="@font/nunito_semibold"
            android:maxLines="1"
            android:text="Product Description"
            android:textColor="@color/faint_txt_color"
            android:textSize="12dp" />


        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="75dp"
            android:src="@drawable/ic_baseline_delete_24" />

        <TextView
            android:id="@+id/bidStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Bidding is over. Product is sold to Rahul \nEmail - gandhirahul199@gmail.com"
            android:textColor="#000" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>